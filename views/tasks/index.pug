extends ../shared/template

block content
      ul
        font(color='white')
        each task in viewTasks
          .row(style='color:white ;background:'+ task.priority.color)
            .col-xs-3
              p: a(href='/task/') #{task.name}
            .col-xs-2
              p #{task.due}
            .col-xs-1
              p #{task.priority.name}
            .col-xs-1
              if task.isComplete == false
                i.fa.fa-square(aria-hidden='true')
              else
                i.fa.fa-check-square-o(aria-hidden='true')
            .col-xs-2
              p #{task.category}
            .col-xs-3
              p #{task.createdAt}
